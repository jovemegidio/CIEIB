{
  "name": "cieib-website",
  "version": "1.0.0",
  "description": "CIEIB - Convenção das Igrejas Evangélicas Interdenominacional do Brasil",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "db:init": "node server/db/init.js",
    "db:seed": "node server/db/seed.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:reload": "pm2 reload ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop cieib",
    "pm2:logs": "pm2 logs cieib --lines 50",
    "deploy": "bash deploy.sh",
    "pwa:icons": "node generate-icons.js && node generate-icons-png.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "sharp": "^0.34.5"
  }
}
